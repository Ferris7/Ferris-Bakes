        <input type="text" class="form-control" placeholder="@Model.DOB" disabled>
    </div>
    <div id="edit">
        <input type="text" class="form-control" placeholder="@Model.FirstName">
        <input type="text" class="form-control" placeholder="@Model.LastName">
        <input type="text" class="form-control" placeholder="@Model.Email">
        <input type="text" class="form-control" placeholder="@Model.DOB">
        <input type="submit" class="btn btn-info" id="betterButton" value="Done" />
    </div>

    <button type="button" class="btn btn-danger" onclick="document.getElementById('info').style.display='none', document.getElementById('edi').style.display='block'" id="editbtn">Edit your infomation</button>




</div>

